%h1
	= "#{@insumo.turnoDia.turno.nombre} #{l @insumo.turnoDia.dia.fecha}"
%fieldset
	%legend=@title
	=f.hidden_field :turnoDia_id, :value => @insumo.turnoDia_id
	.clearfix
		= f.label :aserrin
		.input
			= f.text_field :aserrin
	.clearfix
		= f.label :chip
		.input
			= f.text_field :chip
	.clearfix
		= f.label :crudoProcesado
		.input
			= f.text_field :crudoProcesado
	.clearfix
		= f.label :leniaCaldera
		.input
			= f.text_field :leniaCaldera
	.clearfix
		= f.label :carbonActivado
		.input
			= f.text_field :carbonActivado
	.clearfix
		= f.label :auxiliarDeFiltracion
		.input
			= f.text_field :auxiliarDeFiltracion
	.clearfix
		= f.label :piedra_de_cal
		.input
			= f.text_field :piedra_de_cal
	.actions
		= f.submit boton, :class => "btn large primary"
		= link_to 'Cancelar', ver_turno_dia_path(@insumo.turnoDia.dia.fecha, @insumo.turnoDia.turno.nombre), :class => "btn large error"
