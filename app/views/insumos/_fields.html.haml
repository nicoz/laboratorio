%fieldset
	%legend=@title
	.primero
		%input{ :type => "hidden", :value => "#{@dia.fecha}", :name => "[dia][fecha]"}
		%input{ :type => "hidden", :value => "#{form_authenticity_token}", :name => "authenticity_token"}
		-@dia.turnos.each do |turno|
			=render 'turnos', :turno => turno
.form-actions
	%input{ :type => 'submit', :class => "btn btn-large btn-primary", :value => 'Confirmar'}
	= link_to 'Cancelar', escritorio_path(), :class => "btn btn-large btn-danger"
