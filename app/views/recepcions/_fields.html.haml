%fieldset
	%legend=@title
	= f.hidden_field :dia_id, :value => @dia.id
	.control-group.primero
		= f.label :azucar_crudo, :class => 'control-label'
		.input
			= f.text_field :azucar_crudo
	.control-group
		= f.label :polarizacion, :class => 'control-label'
		.input
			= f.text_field :polarizacion
	.control-group
		= f.label :perdida_en_azucar, :class => 'control-label'
		.input
			= f.text_field :perdida_en_azucar
	.control-group
		= f.label :azucar_en_melaza, :class => 'control-label'
		.input
			= f.text_field :azucar_en_melaza
	.form-actions
		= f.submit boton, :class => "btn btn-large btn-primary"
		= link_to 'Cancelar', turnos_path, :class => "btn btn-large btn-danger"
