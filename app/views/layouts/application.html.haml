!!!5
%html
	%head
		%title= title
		= csrf_meta_tag
		= stylesheet_link_tag "application"
		= javascript_include_tag "application"
	%body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container-fluid
					%a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					- if ingresado?
						= link_to "Laboratorio Azucarlito", escritorio_path, :class => "brand"
					- else
						= link_to "Laboratorio Azucarlito", root_path, :class => "brand"
					.nav-collapse
						%ul.nav
							= render '/layouts/header'
						= render '/sessions/new'
		.intuitive-navigation
			= render '/shared/breadcrumbs'
		.messages.container
			= render '/layouts/flash', :flash => flash
		.container-fluid
			= yield



