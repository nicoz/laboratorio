%h1 Crear usuario
= render 'shared/error_messages'
%div.formulario.prepend-4
	= form_for(@usuario) do |f|
		%div.field
			= f.label :nombre
			%br
			= f.text_field :nombre
		%div.field
			= f.label :email
			%br
			= f.text_field :email
		%div.field
			= f.label :password
			%br
			= f.password_field :password
		%div.field
			= f.label :password_confirmation
			%br
			= f.password_field :password_confirmation
		
		%div.actions
			%br
			= f.submit "Crear"
