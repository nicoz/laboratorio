%td= link_to usuario.email, usuario_path(usuario)
%td= usuario.nombre
%td
	= link_to 'Editar', edit_usuario_path(usuario)
	- if usuario != usuario_actual
		= link_to "Borrar", usuario, :method => :delete, :confirm => "Seguro que desea borrarlo?", :title => "Borrar #{usuario.nombre}"
		= link_to "Reiniciar clave", reiniciarclave_path(usuario), :confirm => "Seguro que desea reiniciar la clave?", :title => "Reiniciar clave"
