%fieldset
	%legend=@title
	=f.hidden_field :cambiando, :value => 1
	.clearfix
		= f.label :nombre
		.input
			= f.text_field :nombre
	.clearfix
		= f.label :email
		.input
			= f.text_field :email
	.clearfix
		= f.label :password
		.input
			= f.password_field :password
	.clearfix
		= f.label :password_confirmation
		.input
			= f.password_field :password_confirmation
	- if usuario_actual.admin? and usuario_actual != @usuario
		.clearfix
			=f.label :admin, "Admistrador?"
			.input
				= f.check_box :admin
	.actions
		= f.submit boton, :class => "btn large primary"
		= link_to 'Cancelar', usuarios_path, :class => "btn large error"
