%fieldset
	%legend=@title
	=f.hidden_field :cambiando, :value => 2
	.clearfix
		= f.label :nombre
		.input
			= f.text_field :nombre
	.clearfix
		= f.label :email
		.input
			= f.text_field :email
	.actions
		= f.submit boton, :class => "btn large primary"
		= link_to 'Cancelar', usuarios_path, :class => "btn large error"
		= link_to 'Modificar Clave', modificarclave_path(@usuario), :class => "btn large" if usuario_actual?(@usuario)
