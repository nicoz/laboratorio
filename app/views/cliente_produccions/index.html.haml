.row-fluid
  .span12
    = form_for @cliente,:validate => true, :html => { :class => "form-horizontal"} do  |f|
      = render 'fields', :f => f, :boton => "Crear"
.row-fluid
  .span6
    %table#table-usuarios.table.table-striped
      %thead
        %tr
          %th.green.header.span4 Nombre
          %th.span2 Acciones
      %tbody
        - if !@clientes.nil?
          - @clientes.each do |cliente|
            %tr.odd
              = render 'cliente', :cliente => cliente
