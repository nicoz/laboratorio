      %input.span2.campo{ :type => "text", :value => "#{dia.pedido_produccion.bolsasAzucarlito}", :name => "[pedido_produccion][bolsasAzucarlito]", "data-name" => 'bolsasAzucarlito'}

  .control-group
    %label.control-label.span1{ :for => "[dia][#{dia.id}][bigBagAzucarlito]"} 
      Azucar, Big Bag Azucarlito kg
    .controls
      %input.span2.campo{ :type => "text", :value => "#{dia.pedido_produccion.bigBagAzucarlito}", :name => "[pedido_produccion][bigBagAzucarlito]", "data-name" => 'bigBagAzucarlito'}

  .control-group
    %label.control-label.span1{ :for => "[dia][#{dia.id}][bigBagDnd]"} 
      Azucar, Big Bag Industria kg
    .controls
      %input.span2.campo{ :type => "text", :value => "#{dia.pedido_produccion.bigBagDnd}", :name => "[pedido_produccion][bigBagDnd]", "data-name" => 'bigBagDnd'}

