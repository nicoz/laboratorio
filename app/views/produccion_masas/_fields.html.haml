%fieldset
	%legend=@title
	= f.hidden_field :dia_id, :value => @dia.id
	= f.hidden_field :id, :id => 'id'
	.control-group.primero
		= f.label :numero_masas_a, :class => 'control-label'
		.input
			= f.text_field :numero_masas_a, "data-name" => 'numero_masas_a', :class => 'campo'
	.control-group
		= f.label :numero_masas_b, :class => 'control-label'
		.input
			= f.text_field :numero_masas_b, "data-name" => 'numero_masas_b', :class => 'campo'
	.control-group
		= f.label :numero_masas_c, :class => 'control-label'
		.input
			= f.text_field :numero_masas_c, "data-name" => 'numero_masas_c', :class => 'campo'
	.control-group
		= f.label :numero_masas_d, :class => 'control-label'
		.input
			= f.text_field :numero_masas_d, "data-name" => 'numero_masas_d', :class => 'campo'
	.form-actions
		= f.submit boton, :class => "btn btn-large btn-primary"
		= link_to 'Cancelar', turnos_path, :class => "btn btn-large btn-danger"
