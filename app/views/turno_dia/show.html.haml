.sidebar
	.well
		%h1= @title
		%h5 Acciones
		%ul.pills
			%li
				- if @turno_dia.estado == 'Abierto'
					- if @insumo.nil?
						= link_to "Ingresar Insumos", crear_insumo_path(@turno_dia.dia.fecha)
					- else
						= link_to "Editar Insumos", crear_insumo_path(@turno_dia.dia.fecha)
					- if @produccion.nil?
						= link_to "Ingresar Produccion", crear_produccion_path(@turno_dia.dia.fecha)
					- else
						= link_to "Editar Produccion", crear_produccion_path(@turno_dia.dia.fecha)
.content
	= render 'ver_turno'
	= render '/layouts/footer'
